+	grep -v '^# See the file LICENSE' \
+		'$(call docdir,$*)/copyright' \
+		>'$(call docdir,$*)/copyright.tmp'
+	cat LICENSE \
+		>>'$(call docdir,$*)/copyright.tmp'
+	mv \
+		'$(call docdir,$*)/copyright.tmp' \
+		'$(call docdir,$*)/copyright'
+
+# see http://bugs.debian.org/295906
+cdbs_python_ver = $(filter-out -%,$(subst -, -,$(patsubst python%,%,$(cdbs_curpkg))))
+
